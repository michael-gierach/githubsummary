<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DetailSectionTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_marginEnd">@dimen/detailTextSideMargins</item>
        <item name="android:layout_marginStart">@dimen/detailTextSideMargins</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="DetailSectionBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_marginEnd">@dimen/detailTextSideMargins</item>
        <item name="android:layout_marginStart">@dimen/detailTextSideMargins</item>
    </style>

    <style name="DetailLanguageBox" parent="DetailSectionBody">
        <item name="android:padding">@dimen/detailLanguageBoxPadding</item>
        <item name="android:background">@drawable/language_box_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
